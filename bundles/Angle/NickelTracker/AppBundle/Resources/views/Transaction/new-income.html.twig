{% extends 'AngleNickelTrackerAppBundle:Common:layout.html.twig' %}
{% set page_title = 'New Income Transaction' %}
{% set active = 'transaction' %}


{% block content %}

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <i class="fa fa-plus"></i> New Income Transaction
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Transaction Form -->
        <div class="row">
            <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
                <div class="box box-primary">

                    <form role="form" method="post" action="{{ path('angle_nt_app_transaction_new_income') }}">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="transactionSourceAccount">Account</label>
                                <select class="form-control" id="transactionSourceAccount" name="transactionSourceAccount" required="required">
                                    <option value="" selected="selected" disabled="disabled">-- Select Account --</option>
                                    {% for account in accounts %}
                                        <option value="{{ account.accountId }}">{{ account.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="transactionDescription">Description</label>
                                <input type="text" class="form-control" id="transactionDescription" name="transactionDescription"
                                       placeholder="Enter a general description of the transaction" required="required">
                            </div>
                            <div class="form-group">
                                <label for="transactionDetails">Details</label>
                                <textarea class="form-control" rows="3" name="transactionDetails"
                                          placeholder="Enter a detailed description.."></textarea>
                            </div>
                            <div class="form-group">
                                <label for="transactionAmount">Amount</label>
                                <div class="input-group">
                                    <span class="input-group-addon">$</span>
                                    <input type="text" class="form-control" id="transactionAmount" name="transactionAmount" required="required">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="transactionDate">Date</label>
                                <div class="input-group date">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    <input type="text" class="form-control pull-right datepicker" id="transactionDate" name="transactionDate" required="required">
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-block btn-primary"><i class="fa fa-save"></i> Save</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>

    </section><!-- /.content -->
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <!-- Enable DatePicker -->
    <script>
        $(function () {
            //Date picker
            $('.datepicker').datepicker({
                autoclose: true,
                useCurrent: true,
                defaultDate: new Date(),
                format: "yyyy-mm-dd",
                todayBtn: "linked",
                clearBtn: true
            });
        });
    </script>
{% endblock %}