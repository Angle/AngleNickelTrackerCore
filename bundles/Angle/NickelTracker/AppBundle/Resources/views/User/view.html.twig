{% extends 'AngleNickelTrackerAppBundle:Common:layout.html.twig' %}
{% set page_title = 'My Profile' %}
{% set active = 'user' %}


{% block content %}

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <strong>User:</strong> {{ user.fullName }}
            <!--<small>Summarized Information</small>-->
            <small class="pull-right"><i class="fa fa-database"></i> {{ user.userId }}</small>
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Main row -->
        <div class="row">

            <div class="col-xs-12">

                <div class="row">

                    <div class="col-xs-12">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title">General Information</h3>
                            </div>
                            <div class="box-body">
                                <dl class="dl-horizontal">
                                    <dt>Name</dt>
                                    <dd>{{ user.fullName }}</dd>
                                    <dt>E-Mail</dt>
                                    <dd>{% if user.email %}<a href="mailto:{{ user.email }}">{{ user.email }}</a>{% else %}<em>N/A</em>{% endif %}</dd>
                                </dl>
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <i class="fa fa-lock"></i>
                                <h3 class="box-title">Change Password</h3>
                            </div>
                            <form role="form" action="{{ path('angle_nt_app_user_change_password') }}" method="post">
                                <div class="box-body">
                                    <div class="form-group">
                                        <label for="newPassword">Old Password</label>
                                        <input type="password" class="form-control" id="newPassword" name="oldPassword" placeholder="Old Password">
                                    </div>
                                    <div class="form-group">
                                        <label for="newPassword">New Password</label>
                                        <input type="password" class="form-control" id="newPassword" name="newPassword" placeholder="New Password">
                                    </div>
                                    <div class="form-group">
                                        <label for="confirmPassword">Repeat Password</label>
                                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm New Password">
                                    </div>
                                </div>
                                <div class="box-footer">
                                    <button type="submit" class="btn btn-primary">Apply</button>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div><!-- /.row (main row) -->

    </section><!-- /.content -->
{% endblock %}