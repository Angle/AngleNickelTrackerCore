<header class="main-header">
    <!-- Logo -->
    <a href="{{ path('angle_nt_app_dashboard') }}" class="logo">
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg"><b>NickelTracker</b>{#App#}</span>
    </a>

    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top" role="navigation">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>

        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <!-- User Account: style can be found in dropdown.less -->
                <li class="user user-menu">
                    <a href="{{ path('angle_nt_app_user_profile') }}">
                        <i class="fa fa-user"></i>
                        <span class="hidden-xs">{{ app.user.fullName }}</span>
                    </a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-plus"></i>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('angle_nt_app_transaction_income') }}">
                                <i class="fa fa-plus fa-fw"></i> <span>New Income</span>
                            </a></li>
                        <li><a href="{{ path('angle_nt_app_transaction_expense') }}">
                                <i class="fa fa-minus fa-fw"></i> <span>New Expense</span>
                            </a></li>
                        <li><a href="{{ path('angle_nt_app_transaction_transfer') }}">
                                <i class="fa fa-arrow-right fa-fw"></i> <span>New Transfer</span>
                            </a></li>
                    </ul>
                </li>
                <li class="user user-menu">
                    <a href="{{ path('angle_nt_app_logout') }}"
                    onclick="return confirm('Are you sure you want to logout?');">
                        <i class="fa fa-fw fa-power-off"></i>
                    </a>
                </li>
            </ul>
        </div>

    </nav>
</header>