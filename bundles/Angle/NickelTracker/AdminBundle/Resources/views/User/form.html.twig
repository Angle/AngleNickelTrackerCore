{% extends 'AngleNickelTrackerAdminBundle:Common:layout.html.twig' %}
{# Navigation attributes #}
{% set page_title = 'User: ' ~ user.fullName %}
{% set active = 'user' %}



{% block content %}
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title"><i class="fa fa-fw fa-edit"></i> Edit Information</h3>
                    </div>
                    <div class="box-body">
                        {% form_theme form 'AngleNickelTrackerAdminBundle:Form:fields.html.twig' %}
                        {{ form(form) }}
                    </div>
                </div><!-- /.box -->
            </div><!-- /.col -->

        </div><!-- /.row -->
    </section><!-- /.content -->
{% endblock %}